<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zero_to_6numbers">

    <LinearLayout
        android:id="@+id/fRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnZero"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="40dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/txtZero"
                android:layout_marginTop="2dp"
                android:text="Zero"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintTop_toBottomOf="@+id/button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnOne"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="40dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/txtOne"
                android:layout_marginTop="2dp"
                android:text="One"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintTop_toBottomOf="@+id/button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="40dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/txtTwo"
                android:layout_marginTop="2dp"
                android:text="Two"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintTop_toBottomOf="@+id/button" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:id="@+id/fRow2"
    android:layout_marginStart="35dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="35dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/fRow">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnThree"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/txtThree"
            android:layout_marginTop="5dp"
            android:text="Three"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/button" />
    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fRow3"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fRow2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnFour"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="40dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/txtFour"
                android:layout_marginTop="5dp"
                android:text="Four"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintTop_toBottomOf="@+id/button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnFive"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="40dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/txtFive"
                android:layout_marginTop="5dp"
                android:text="Five"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintTop_toBottomOf="@+id/button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSix"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="40dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/txtSix"
                android:layout_marginTop="5dp"
                android:text="Six"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintTop_toBottomOf="@+id/button" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fRow3"
        tools:ignore="MissingConstraints">


        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:text="NEXT" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>